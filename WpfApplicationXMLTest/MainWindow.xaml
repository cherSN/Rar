<Window x:Class="Rar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rar"
        mc:Ignorable="d"
        Title="MainWindow" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
    <DockPanel>
        <Menu x:Name="menu" Height="21" VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" HorizontalAlignment="Left" Width="145" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0" DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="91*"/>
                <RowDefinition Height="393*"/>
            </Grid.RowDefinitions>
            <Label x:Name="labelPartner" Content="Контрагент:" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="24" Width="72" Margin="0,10,0,0" Padding="5,0,0,0" VerticalContentAlignment="Center"/>

            <ComboBox x:Name="comboBoxPartner" Grid.Row="0" Margin="77,12,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="400" MaxDropDownHeight="500" Height="22"  >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <Grid ShowGridLines="False">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="80" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" Grid.Column="0" Margin="5,0,0,0"  TextWrapping="Wrap" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding INN}"  Grid.Column="1" Margin="5,0,0,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding KPP}"  Grid.Column="2" Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <TextBox HorizontalAlignment="Left" Height="23" Margin="552,12,0,0"  Text="{Binding DocumentDate, StringFormat=\{0:d\}}" VerticalAlignment="Top" Width="120" Grid.Row="0"/>
            <Label Content="Дата:" HorizontalAlignment="Left" Margin="509,12,0,55" VerticalAlignment="Center" Height="24" VerticalContentAlignment="Center" Padding="0" Width="28" Grid.Row="0"/>
            <Label Content="Версия:" HorizontalAlignment="Left" Margin="0,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.004,0.449" Height="23" Padding="5,0,0,0" VerticalContentAlignment="Center" Width="46"  Grid.Row="0"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="77,39,0,0"  Text="{Binding Version}" VerticalAlignment="Top" Width="45"  Grid.Row="0"/>
            <Label Content="Программа:" HorizontalAlignment="Left" Margin="133,37,0,0" VerticalAlignment="Top" Height="23" Padding="0" VerticalContentAlignment="Center" Width="66"  Grid.Row="0"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="214,37,0,0"  Text="{Binding ProgramName}" VerticalAlignment="Top" Width="458"  Grid.Row="0"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="77,68,0,0" TextWrapping="Wrap" Text="{Binding FormNumber}" VerticalAlignment="Top" Width="27"  Grid.Row="0"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="187,69,0,0" TextWrapping="Wrap" Text="{Binding ReportPeriod}" VerticalAlignment="Top" Width="59"  Grid.Row="0"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="305,69,0,0" TextWrapping="Wrap" Text="{Binding YearReport}" VerticalAlignment="Top" Width="76"  Grid.Row="0"/>
            <TextBox HorizontalAlignment="Left" Height="23" Margin="520,68,0,0" TextWrapping="Wrap" Text="{Binding CorrectionNumber}" VerticalAlignment="Top" Width="76"  Grid.Row="0"/>
            <Label Content="№ формы:" HorizontalAlignment="Left" Height="24" Margin="10,68,0,0" VerticalAlignment="Top" Width="72" Grid.Row="0"/>
            <Label Content="Период:" HorizontalAlignment="Left" Height="24" Margin="127,68,0,0" VerticalAlignment="Top" Width="72" Grid.Row="0"/>
            <Label Content="Год:" HorizontalAlignment="Left" Height="24" Margin="264,68,0,0" VerticalAlignment="Top" Width="36" Grid.Row="0"/>
            <Label Content="Корректировка:" HorizontalAlignment="Left" Height="24" Margin="399,69,0,0" VerticalAlignment="Top" Width="101" Grid.Row="0"/>
            <TabControl x:Name="tabControl" Grid.Row="1">
                <TabItem x:Name="tabData" Header="Форма 6">
                    <Grid Background="#FFE5E5E5">
                        <DataGrid x:Name="dataGridF6" Margin="10,10,0,0"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabCompanies" Header="Контрагенты">
                    <Grid Background="#FFE5E5E5">
                        <ToolBar x:Name="toolBar" Height="21" VerticalAlignment="Top"/>
                        <DataGrid x:Name="dataGridCompanies" ItemsSource="{Binding CompanyList}" Margin="0,21,0,0" AutoGenerateColumns="False" IsReadOnly="True" RowBackground="LightGray" AlternatingRowBackground="White">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Path=ID}" ClipboardContentBinding="{x:Null}" Header="ИД" Width="40"/>
                                <DataGridCheckBoxColumn Binding="{Binding Path=Producter}" ClipboardContentBinding="{x:Null}" Header="ПИ"/>
                                <DataGridTextColumn Binding="{Binding Path=Name}" ClipboardContentBinding="{x:Null}" Header="Наименование" Width="300"/>
                                <DataGridTextColumn Binding="{Binding Path=INN}" ClipboardContentBinding="{x:Null}" Header="ИНН" Width="80"/>
                                <DataGridTextColumn Binding="{Binding Path=KPP}" ClipboardContentBinding="{x:Null}" Header="КПП" Width="80"/>
                                <DataGridTextColumn Binding="{Binding Path=Adress.AdressString}" ClipboardContentBinding="{x:Null}" Header="Адрес" Width="*"/>
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Border Margin="10" Padding="10" BorderBrush="SteelBlue" BorderThickness="2" CornerRadius="5">
                                        <TextBlock Text="{Binding Path=Adress.AdressString}" TextWrapping="Wrap" FontSize="10" MaxWidth="350"></TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                        </DataGrid>

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
