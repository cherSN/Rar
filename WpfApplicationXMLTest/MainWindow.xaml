<Window x:Class="Rar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rar"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <Menu x:Name="menu" Height="21" VerticalAlignment="Top" DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Открыть" HorizontalAlignment="Left" Width="145" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0" DockPanel.Dock="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="269*"/>
            </Grid.RowDefinitions>
            <Label x:Name="labelPartner" Content="Контрагент" Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>            
            <ComboBox x:Name="comboBox" Grid.Row="0" HorizontalAlignment="Left" Margin="90,0,0,0" VerticalAlignment="Center" Width="230" ItemsSource="{Binding CompanyList, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:MainWindow}}}"/>
            
            <TabControl x:Name="tabControl" Margin="0" Grid.Row="1">
                <TabItem x:Name="tabData" Header="Форма 6">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem x:Name="tabCompanies" Header="Контрагенты">
                    <Grid Background="#FFE5E5E5">
                        <ToolBar x:Name="toolBar" Height="21" VerticalAlignment="Top"/>
                        <DataGrid x:Name="dataGridCompanies" Margin="0,21,0,0" AutoGenerateColumns="False" IsReadOnly="True" RowBackground="LightGray" AlternatingRowBackground="White">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Path=ID}" ClipboardContentBinding="{x:Null}" Header="ИД" Width="40"/>
                                <DataGridCheckBoxColumn Binding="{Binding Path=Producter}" ClipboardContentBinding="{x:Null}" Header="ПИ"/>
                                <DataGridTextColumn Binding="{Binding Path=Name}" ClipboardContentBinding="{x:Null}" Header="Наименование" Width="300"/>
                                <DataGridTextColumn Binding="{Binding Path=INN}" ClipboardContentBinding="{x:Null}" Header="ИНН" Width="80"/>
                                <DataGridTextColumn Binding="{Binding Path=KPP}" ClipboardContentBinding="{x:Null}" Header="КПП" Width="80"/>
                                <DataGridTextColumn Binding="{Binding Path=Adress.AdressString}" ClipboardContentBinding="{x:Null}" Header="Адрес" Width="*"/>
                            </DataGrid.Columns>
                            <DataGrid.RowDetailsTemplate>
                                <DataTemplate>
                                    <Border Margin="10" Padding="10" BorderBrush="SteelBlue" BorderThickness="2" CornerRadius="5">
                                        <TextBlock Text="{Binding Path=Adress.AdressString}" TextWrapping="Wrap" FontSize="10" MaxWidth="350"></TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGrid.RowDetailsTemplate>
                        </DataGrid>

                    </Grid>
                </TabItem>
            </TabControl>



        </Grid>

    </DockPanel>
</Window>
